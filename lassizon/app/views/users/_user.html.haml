%head
    :css
        body{
            text-align:center;
        }

%body
%div
    = user.name
    = user.surname
    = user.email
    - if current_user && current_user.roles_mask == 2
        = button_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
    %br
%div
